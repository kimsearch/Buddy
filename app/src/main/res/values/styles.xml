<resources>
    <!-- 기본 텍스트 스타일 -->
    <style name="TitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2A3D45</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2A3D45</item>
    </style>

    <!-- 버튼 스타일 -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">#D0F4DE</item>
        <item name="android:textColor">#2A3D45</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">#FDFFB6</item>
        <item name="android:textColor">#2A3D45</item>
    </style>

    <!-- 리스트 스타일 -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:divider">#D0F4DE</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- 랭킹 그래프 스타일 -->
    <style name="RankingGraphStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">#D0F4DE</item>
    </style>

    <!-- 마이페이지 팝업 -->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/rounded_popup_background</item>
    </style>

    <!-- 캘린더 -->
    <style name="Cal_HeaderText" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/bmjua</item>
        <item name="android:textColor">#2A3D45</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Cal_WeekdayText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/bmjua</item>
        <item name="android:textColor">#2A3D45</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Cal_DateText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/bmjua</item>
        <item name="android:textColor">#2A3D45</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarCard" parent="">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E0E0E0</item>
    </style>

    <style name="EmphasisButtonText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">#2A3D45</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>


</resources>
