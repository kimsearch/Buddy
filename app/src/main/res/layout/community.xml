<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="뒤로가기" />

        <TextView
            android:id="@+id/community_page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/group_community_title"
            android:textSize="22sp"
            android:textColor="#202124"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_mypage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_mypage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:padding="6dp"
            android:contentDescription="커뮤니티"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/post_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:layout_below="@+id/header_container"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="8dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_heart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:paddingTop="8dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btn_like"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_heart"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="#FF4B4B"
                        android:contentDescription="커뮤니티"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btn_comment"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_speech_bubble"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="#202124"
                        android:contentDescription="커뮤니티"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/post_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post_content"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_write_post"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#2A3D45"
        android:background="@drawable/ic_edit"
        android:src="@drawable/ic_edit"
        android:elevation="6dp"
        android:contentDescription="커뮤니티"/>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#e8e8e8"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:importantForAccessibility="no"
            android:contentDescription="홈으로 이동"
            android:scaleType="center"
            android:padding="12dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:importantForAccessibility="no"
            android:contentDescription="그룹 페이지로 이동"
            android:scaleType="center"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_nav_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:importantForAccessibility="no"
            android:contentDescription="그룹 검색 페이지로 이동"
            android:scaleType="center"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_pet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_paw"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:importantForAccessibility="no"
            android:contentDescription="펫 키우기 페이지로 이동"
            android:scaleType="fitCenter"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:importantForAccessibility="no"
            android:contentDescription="마이페이지로 이동"
            android:scaleType="center"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>
