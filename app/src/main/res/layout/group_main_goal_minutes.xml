<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="22dp"
            android:paddingStart="3dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="뒤로가기" />

            <TextView
                android:id="@+id/group_main_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="그룹 이름"
                android:textSize="22sp"
                android:textColor="#202124"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_group"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="그룹 멤버"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_speech_bubble"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="그룹 커뮤니티"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_alarm"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="알림"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:background="@android:color/transparent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/group_goal_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그룹 목표는 여기에 표시됩니다."
                android:textSize="12sp"
                android:textColor="#202124"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누적 랭킹"
                android:textSize="18sp"
                android:textColor="#202124"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rankingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:background="#EDEDED"
                android:padding="12dp"
                android:clipToPadding="false"
                android:contentDescription="누적 랭킹"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timer"
                android:textSize="18sp"
                android:textColor="#202124"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/reading_goal_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_gray_rounded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="6dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_read_minus"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:text="−"
                        android:textSize="20sp"
                        android:textColor="#202124"
                        android:backgroundTint="#D0F4DE"
                        android:contentDescription="읽기 시간 감소" />

                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/edit_text_background"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <EditText
                            android:id="@+id/et_read_minutes"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLength="3"
                            android:hint="0"
                            android:textColor="#202124"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:padding="0dp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_read_plus"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:text="+"
                        android:textSize="20sp"
                        android:textColor="#202124"
                        android:backgroundTint="#D0F4DE"
                        android:contentDescription="읽기 시간 증가" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/preset_10"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="10분"
                        android:textAllCaps="false"
                        android:textColor="#202124"
                        android:backgroundTint="#EAF6F2"
                        android:fontFamily="@font/bmjua"
                        android:contentDescription="10분으로 설정"
                        android:layout_marginEnd="6dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/preset_20"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="20분"
                        android:textAllCaps="false"
                        android:textColor="#202124"
                        android:backgroundTint="#EAF6F2"
                        android:fontFamily="@font/bmjua"
                        android:contentDescription="20분으로 설정"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/preset_30"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="30분"
                        android:textAllCaps="false"
                        android:textColor="#202124"
                        android:backgroundTint="#EAF6F2"
                        android:fontFamily="@font/bmjua"
                        android:contentDescription="30분으로 설정"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tv_read_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 0 / 0분"
                        android:textSize="14sp"
                        android:textColor="#202124"
                        android:fontFamily="@font/bmjua" />

                    <ProgressBar
                        android:id="@+id/pb_read_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="6dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="#76C7C0"
                        android:indeterminate="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_read_start"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="타이머 시작"
                        android:textAllCaps="false"
                        android:textColor="#202124"
                        android:backgroundTint="#D0F4DE"
                        android:fontFamily="@font/bmjua"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="독서 타이머 시작" />

                    <Button
                        android:id="@+id/btn_read_done"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="완료"
                        android:textAllCaps="false"
                        android:textColor="#202124"
                        android:backgroundTint="#D0F4DE"
                        android:fontFamily="@font/bmjua"
                        android:layout_marginStart="8dp"
                        android:contentDescription="독서 완료" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 기록"
                android:textSize="18sp"
                android:textColor="#202124"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_graph_background" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#e8e8e8"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="홈"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="그룹"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_nav_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="검색"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_pet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_paw"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:contentDescription="펫"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="마이페이지"/>
    </LinearLayout>
</RelativeLayout>
