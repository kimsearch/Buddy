<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <!-- 헤더 -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <!-- 페이지 이름 + 알림 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/group_page_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/group_page_title"
                android:textSize="24sp"
                android:textColor="#2A3D45"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_alarm"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notification_description"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 스크롤 영역 -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@id/create_room_button"
        android:background="@android:color/transparent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/groupgoal_goal_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <!-- 그룹 목표 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/group_crown_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_crown"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/group_crown_button"
                        android:tint="#2A3D45"
                        android:scaleType="center"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/group_goal_button_1"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:text="@string/group_goal_button_1"
                        android:fontFamily="@font/bmjua"
                        android:textColor="#2A3D45"
                        android:backgroundTint="#D0F4DE"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/delete_group_goals_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_delete"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/delete_group_goals_button"
                        android:tint="#2A3D45"
                        android:scaleType="center"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- 그룹 목표 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/group_like_button_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_heart"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/group_like_button_1"
                        android:tint="#2A3D45"
                        android:scaleType="center"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/group_goal_button_2"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:text="@string/group_goal_button_2"
                        android:fontFamily="@font/bmjua"
                        android:textColor="#2A3D45"
                        android:backgroundTint="#D0F4DE"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"/>


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/delete_group_goals_button_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_delete"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_group_goals_button_1"
                        android:tint="#2A3D45"
                        android:scaleType="center"
                        android:padding="12dp" />

                </LinearLayout>

                <!-- 그룹 목표 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/group_like_button_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_heart"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/group_like_button_2"
                        android:tint="#2A3D45"
                        android:scaleType="center"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/group_goal_3"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:text="@string/group_goal_3"
                        android:fontFamily="@font/bmjua"
                        android:textColor="#2A3D45"
                        android:backgroundTint="#D0F4DE"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/delete_group_goals_button_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_delete"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_group_goals_button_2"
                        android:tint="#2A3D45"
                        android:scaleType="center"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/create_room_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/create_room"
        android:backgroundTint="#FBF5DA"
        android:fontFamily="@font/bmjua"
        android:textColor="#2A3D45"
        android:layout_above="@id/bottom_nav"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:padding="14dp"/>

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#DBDBDB"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:importantForAccessibility="no"
            android:scaleType="center"
            android:padding="12dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_group"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:importantForAccessibility="no"
            android:scaleType="center"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:importantForAccessibility="no"
            android:scaleType="center"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_alarm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_paw"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:importantForAccessibility="no"
            android:scaleType="center"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:importantForAccessibility="no"
            android:scaleType="center"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>
