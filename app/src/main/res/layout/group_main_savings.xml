<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="22dp"
            android:paddingStart="3dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="뒤로가기" />

            <TextView
                android:id="@+id/group_main_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="그룹 이름"
                android:textColor="#202124"
                android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_group"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="그룹 멤버"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_speech_bubble"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="그룹 커뮤니티"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_alarm"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="알림"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 본문 스크롤 -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:background="@android:color/transparent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/group_goal_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그룹 목표는 여기에 표시됩니다."
                android:textSize="12sp"
                android:textColor="#202124"
                android:layout_marginBottom="10dp"
                tools:text="그룹 목표: 1,000,000원 (누적 420,000원 · 달성 42.0%)" />

            <LinearLayout
                android:id="@+id/savings_summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_graph_background"
                android:padding="14dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_goal_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="목표"
                        android:textColor="#202124"
                        android:textSize="14sp"
                        tools:text="목표 1,000,000원" />

                    <TextView
                        android:id="@+id/tv_progress_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#202124"
                        android:textSize="14sp"
                        tools:text="42.0%" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/goal_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="#9BD2C2"
                    android:background="#E6E6E6"
                    tools:progress="42" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_saved_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="누적 0원"
                        android:textColor="#202124"
                        android:textSize="13sp"
                        tools:text="누적 420,000원" />

                    <TextView
                        android:id="@+id/tv_remain_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="남은 0원"
                        android:textColor="#202124"
                        android:textSize="13sp"
                        tools:text="남은 580,000원" />
                </LinearLayout>
            </LinearLayout>
            <!-- ★ 추가 끝 -->

            <!-- 누적 랭킹 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누적 랭킹"
                android:textSize="18sp"
                android:textColor="#202124"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rankingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:background="#EDEDED"
                android:padding="12dp"
                android:clipToPadding="false"
                android:contentDescription="누적 랭킹"/>

            <!-- 오늘 저축 기록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 저축 기록"
                android:textSize="18sp"
                android:textColor="#202124"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_graph_background" />

            <!-- 입력 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/goal_input_edittext"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="#202124"
                    android:textSize="16sp"
                    android:hint="저축 금액 입력" />

                <Button
                    android:id="@+id/goal_input_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="입력"
                    android:fontFamily="@font/bmjua"
                    android:textColor="#202124"
                    android:backgroundTint="#D0F4DE"
                    android:layout_marginStart="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>
            </LinearLayout>

            <!-- 이전 기록 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 기록"
                android:textSize="18sp"
                android:textColor="#202124"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_graph_background" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#e8e8e8"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="홈"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_group"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="그룹"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_nav_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="검색"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_pet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_paw"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:contentDescription="펫"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#202124"
            android:scaleType="center"
            android:padding="12dp"
            android:contentDescription="마이페이지"/>
    </LinearLayout>
</RelativeLayout>
