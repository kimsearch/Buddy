<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <!-- 헤더 -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <!-- 앱 이름 + 알림 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="22dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="BuddyQuest"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2A3D45"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/notification_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_alarm"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="알림"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 나의 목표 현황 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_white_rounded">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="나의 목표 현황"
                android:textSize="20sp"
                android:textColor="#2A3D45"
                android:fontFamily="@font/bmjua"
                android:layout_marginEnd="12dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/calendar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_calendar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="캘린더"
                android:tint="#2A3D45"
                android:scaleType="center"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 스크롤 영역 -->
    <ScrollView
        android:id="@+id/scroll_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 그룹 목표 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그룹 목표"
                android:textSize="20sp"
                android:textColor="#2A3D45"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/group_goal_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

            <!-- 개인 목표 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 목표"
                android:textSize="20sp"
                android:textColor="#2A3D45"
                android:fontFamily="@font/bmjua"
                android:layout_marginBottom="12dp"/>

            <!-- 이후 개인 목표 RecyclerView 추가 가능 -->

        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#DBDBDB"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:scaleType="center"
            android:padding="12dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_group"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:scaleType="center"
            android:padding="12dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:scaleType="center"
            android:padding="12dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_pet"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_paw"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:scaleType="fitCenter"
            android:padding="12dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/nav_mypage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_mypage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#2A3D45"
            android:scaleType="center"
            android:padding="12dp"/>
    </LinearLayout>

</RelativeLayout>
