<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="22dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/password_find_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/password_find_title"
                android:fontFamily="@font/bmjua"
                android:textSize="24sp"
                android:textColor="#2A3D45"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_container"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">

            <EditText
                android:id="@+id/edittext_email_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_background"
                android:hint="이메일 입력"
                android:enabled="true"
                android:focusable="true"
                android:fontFamily="@font/bmjua"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#999999"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/email_okay_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/nickname_okay_button"
                android:fontFamily="@font/bmjua"
                android:backgroundTint="#D0F4DE"
                android:textColor="#2A3D45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <EditText
                android:id="@+id/edittext_password_1_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_background"
                android:hint="새 비밀번호 입력"
                android:enabled="true"
                android:focusable="true"
                android:fontFamily="@font/bmjua"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#999999"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">

            <EditText
                android:id="@+id/edittext_password_2_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_background"
                android:hint="새 비밀번호 재입력"
                android:enabled="true"
                android:focusable="true"
                android:fontFamily="@font/bmjua"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#999999"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/password_okay_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/birthday_okay_button"
                android:fontFamily="@font/bmjua"
                android:backgroundTint="#D0F4DE"
                android:textColor="#2A3D45" />
        </LinearLayout>

        <Button
            android:id="@+id/re_email_setting"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/re_email_setting"
            android:fontFamily="@font/bmjua"
            android:backgroundTint="#FBF5DA"
            android:textColor="#2A3D45"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
